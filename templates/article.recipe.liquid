<div class="recipe-container">
  {% assign recipe_data = article.metafields.custom.recipe_data %}

  {% if article.metafields.recipe_data %}
    {{ recipe_data }}
    <div class="recipe-header">
      <h1 class="recipe-title">{{ article.title }}</h1>
      <p><strong>Difficulty:</strong> {{ recipe_data.recipe.difficulty }}</p>
      <p><strong>Cooking Time:</strong> {{ article.metafields.recipe_data.recipe.cooking_time }} minutes</p>
    </div>

    <div class="recipe-picture">
      {% if recipe.picture %}
        <img src="{{ recipe.picture | image_url: 'large' }}" alt="Recipe Image for {{ article.title }}">
      {% endif %}
    </div>

    <div class="recipe-content">
      {{ recipe.content }}
    </div>
  {% else %}
    <p>No recipe data available.</p>
  {% endif %}
</div>
