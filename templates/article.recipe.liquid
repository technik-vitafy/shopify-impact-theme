<div class="recipe-container">
  {% assign recipe = article.metaobject %}

  {% if recipe %}
    <div class="recipe-header">
      <h1 class="recipe-title">{{ article.title }}</h1>
      <p class="recipe-difficulty"><strong>Difficulty:</strong> {{ recipe.difficulty | capitalize }}</p>
      <p class="recipe-cooking-time"><strong>Cooking Time:</strong> {{ recipe.cooking_time }} minutes</p>
    </div>

    <div class="recipe-picture">
      {% if recipe.picture %}
        <img src="{{ recipe.picture | image_url: 'large' }}" alt="Recipe Image for {{ article.title }}">
      {% endif %}
    </div>

    <div class="recipe-content">
      {{ recipe.content }}
    </div>
  {% else %}
    <p>No recipe data available.</p>
  {% endif %}
</div>
